{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": ["es2018", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true
  },
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "dist"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
